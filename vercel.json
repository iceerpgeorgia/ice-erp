{
  "buildCommand": "pnpm prisma generate && pnpm build",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/bank-transactions/upload/route.ts": {
      "maxBodySize": "10mb"
    },
    "app/api/bank-transactions-test/upload/route.ts": {
      "maxBodySize": "10mb"
    }
  },
  "env": {
    "NEXTAUTH_URL": "https://iceerpgeorgia.com"
  },
  "crons": [
    {
      "path": "/api/cron/update-nbg-rates",
      "schedule": "0 16 * * *"
    },
    {
      "path": "/api/cron/cash-based-monthly-accruals",
      "schedule": "0 10 * * 0"
    }
  ]
}
